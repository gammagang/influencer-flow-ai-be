{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES5",
    "lib": ["es6"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Add this if you encounter issues with type definitions in node_modules
    "verbatimModuleSyntax": false // If you decide to use the new module syntax handling
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".vscode/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
